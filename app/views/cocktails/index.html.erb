<div class="master mt-4" style="color: white;">

  <div class="top">
    <img src="https://images.unsplash.com/photo-1559443922-3f698a0ff27a?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=738&q=80" alt="" width="100%" id="master-img">
    <h1 style="color: white;">Cocktails selection</h1>
  </div>

  <div class="box">
      <% @cocktails.each do |cocktail| %>

        <div class="card-trip mt-3">
          <% if cocktail.images.first %>
            <%= cl_image_tag cocktail.images.first.key, crop: :fill %>
          <% else %>
            <img src="https://www.amathusdrinks.com/SupplyImages/WF20003/Our%20Brands.jpg">
          <% end %>
          <div class="card-trip-infos">
            <div>
              <h2><%= cocktail.name %></h2>
              <p><%= link_to "See details", cocktail_path(cocktail) %></p>
            </div>
          </div>
        </div>

      <% end %>
  </div>

</div>
