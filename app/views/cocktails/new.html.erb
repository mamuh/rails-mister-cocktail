<div class="container" style="color: white; width: 60vw;">
  <div class="new-form mt-5 p-5">
    <h1>New cocktail</h1>
    <%= simple_form_for @cocktail do |f| %>
      <%= f.input :name %>
      <%= f.input :images, as: :file, input_html: { multiple: true } %>
      <%= f.submit %>
    <% end %>
  </div>
</div>
